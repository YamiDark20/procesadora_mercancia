        <record model="ir.ui.view" id="kanban_view_empresa">
            <field name="name">Empresa Kanban</field>
            <field name="model">empresa.empresa</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name='id'/>
                    <templates>
                        <t t-name="kanban-box" class=" p-2 d-flex align-items-middle justify-content-center">
                            <div class="oe_kanban_global_click ">
                                <div class="o_kanban_image d-flex flex-column align-middle justify-content-center h-100">
                                    <img t-att-src="kanban_image('empresa.empresa', 'image', record.id.value)"  class=" align-middle"/>
                                    <!-- <img  t-att-src="kanban_image('empresa.empresa', 'record.contacto_id.image_1920', record.id.value)"/> -->
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class=" h-100">
                                        <ul class="">
                                            <li class="mb-2">Nombre :<field name="contacto_id" /></li>
                                            <li class="mb-2">NIF :<field name="nif" /></li>
                                            <li>Tipo :<field name="tipo"/></li>
                                        </ul>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_empresa_tree" model="ir.ui.view">
            <field name="name">empresa.empresa.tree</field>
            <field name="model">empresa.empresa</field>
            
