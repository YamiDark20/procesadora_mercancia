        <record id="view_empresa_form" model="ir.ui.view">
            <field name="name">empresa.empresa.form</field>
            <field name="model">empresa.empresa</field>
            <field name="arch" type="xml">
                <form string="Empresa">
                    <sheet>
                        <group>
                            <!-- <field name="nif"/>
                            <field name="tipo"/>
                            <field name="name"/>
                            <field name="email"/> -->
                            <group>
                                <field name="nif"/>
                                <field name="tipo"/>
                            </group>
                            <group>
                                <field name="contacto_id" domain="[('is_company', '=', True)]"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Info. Adicional">
                                <group>
                                    <field name="descripcion" class="border w-100 pb-5"/>
                                </group>
                                
                            </page>
                        </notebook>
                        <!-- <button name="action_create_contact" type="object" string="Crear Contacto" class="btn-primary"/> -->
                    </sheet>
                </form>
            </field>
        </record>

